<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SQL TERMINAL - Continue? Y/N</title>
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <div class="arcade-container">
        <h1 class="arcade-title" style="color: var(--terminal-green);">SQL TERMINAL</h1>
        <p class="arcade-subtitle">Database Query Interface - LOCALHOST ONLY</p>

        <!-- Display Messages -->
        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <div class="admin-panel">
            <div class="terminal" id="terminalOutput">
                <div class="terminal-command">> SQLite version 3.37.0</div>
                <div class="terminal-command">> Connected to: admin.db</div>
                <div class="terminal-command">> Access: LOCALHOST REQUIRED</div>
                <div class="terminal-output" id="queryOutput"></div>
            </div>

            <form id="sqlForm" style="margin-top: 20px;">
                <div class="form-group">
                    <label class="form-label">SQL QUERY:</label>
                    <textarea name="query" class="sql-query" placeholder="SELECT * FROM users;" required></textarea>
                </div>
                <button type="submit" class="arcade-btn">EXECUTE QUERY</button>
            </form>
        </div>

        <div class="nav-links">
            <a href="/admin" class="nav-link">BACK TO ADMIN</a>
            <a href="/logout" class="nav-link">LOGOUT</a>
        </div>
    </div>

    <script>
        document.getElementById('sqlForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const query = formData.get('query');
            
            const output = document.getElementById('queryOutput');
            output.innerHTML = `<div class="terminal-command">> Executing: ${query}</div>`;
            
            try {
                const response = await fetch('/api/debug/sql', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ query })
                });
                
                const data = await response.json();
                if (data.results) {
                    output.innerHTML += `<div class="terminal-output">${JSON.stringify(data.results, null, 2)}</div>`;
                } else if (data.error) {
                    output.innerHTML += `<div style="color: #ff0000;">ERROR: ${data.error}</div>`;
                }
            } catch (error) {
                output.innerHTML += `<div style="color: #ff0000;">NETWORK ERROR: ${error.message}</div>`;
            }
        });
    </script>
</body>
</html>